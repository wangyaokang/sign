<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyk.sign.persistence.AdministratorMapper">

    <resultMap type="com.wyk.sign.model.Administrator" id="adminMap">
        <id property="id" column="id" javaType="long"/>
        <result property="wxId" column="wx_id"/>
        <result property="wxName" column="wx_name"/>
        <result property="wxAvatarUrl" column="wx_avatar_url"/>
        <result property="realName" column="real_name"/>
        <result property="userType" column="user_type"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>

    <sql id="selectSQL">
		select * from tb_admin
	</sql>

    <!-- Base Mapper -->
    <select id="get" parameterType="hashmap" resultMap="adminMap">
        <include refid="selectSQL"/>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="wxId != null">
                and wx_id = #{wxId}
            </if>
        </where>
        limit 0,1
    </select>

    <select id="query" resultMap="adminMap">
        <include refid="selectSQL"/>
    </select>

    <select id="queryByMap" parameterType="hashmap" resultMap="adminMap">
        <include refid="selectSQL"/>
        <where>
            <if test="wxId != null">
                wx_id = #{wxId}
            </if>
            <if test="wxName != null">
                and wxName = #{wxName}
            </if>
            <if test="realName != null">
                and real_name = #{realName}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.wyk.sign.model.Administrator"
            useGeneratedKeys="true" keyProperty="id">
		insert into tb_admin (wx_id,
		wx_name,
		wx_avatar_url,
		real_name,
		user_type,
		status)
		values
		(#{wxId},
		#{wxName},
		#{wxAvatarUrl},
		#{realName},
		#{userType},
		#{status})
	</insert>

    <update id="update" parameterType="com.wyk.sign.model.Administrator">
		update tb_admin set
		wx_id=#{wxId},
		wx_name=#{wxName},
		wx_avatar_url=#{wxAvatarUrl},
		real_name=#{realName},
		status=#{status},
		modify_time=#{modifyTime}
		where id = #{id}
	</update>

    <update id="updateBatch" parameterType="List">
        <foreach collection="list" separator=";" item="admin">
            update tb_admin set
            wx_id=#{admin.wxId},
            wx_name=#{admin.wxName},
            wx_avatar_url=#{admin.wxAvatarUrl},
            real_name=#{admin.realName},
            status=#{admin.status},
            modify_time=#{admin.modifyTime}
            where id = #{admin.id}
        </foreach>
    </update>

    <delete id="delete" parameterType="com.wyk.sign.model.Administrator">
        delete from tb_admin
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </delete>

    <delete id="deleteByMap" parameterType="hashmap">
        delete from tb_admin
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </delete>
    <!-- End of Base Mapper -->

</mapper>