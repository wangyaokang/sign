<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyk.sign.persistence.ClassesMapper">

	<resultMap type="com.wyk.sign.model.Classes" id="classMap">
		<id property="id" column="id" javaType="long" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<association property="admin" javaType="com.wyk.sign.model.Administrator">
			<id property="id" column="admin_id"/>
			<result property="wxId" column="admin_wx_id" />
			<result property="wxName" column="admin_wx_name" />
			<result property="wxAvatarUrl" column="admin_wx_avatar_url" />
			<result property="realName" column="admin_real_name" />
			<result property="userType" column="admin_user_type" />
			<result property="status" column="admin_status" />
		</association>
	</resultMap>

	<sql id="selectSQL">
		select cl.*,
			ad.wx_id as admin_wx_id,
			ad.wx_name as admin_wx_name,
			ad.wx_avatar_url as admin_wx_avatar_url,
			ad.real_name as admin_real_name,
			ad.user_type as admin_user_type,
			ad.status as admin_status
		from tb_classes cl
		inner join tb_admin ad on cl.admin_id=ad.id
	</sql>

	<!-- Base Mapper -->
	<select id="get" parameterType="hashmap" resultMap="classMap">
		<include refid="selectSQL" />
		<where>
			<if test="id != null">
				cl.id = #{id}
			</if>
		</where>
		limit 0,1
	</select>

	<select id="query" resultMap="classMap">
		<include refid="selectSQL" />
	</select>

	<select id="queryByMap" parameterType="hashmap" resultMap="classMap">
		<include refid="selectSQL" />
		<where>
			<if test="name != null">
				cl.name = #{name}
			</if>
			<if test="wxId != null">
				and ad.wx_Id = #{wxId}
			</if>
			<if test="wxName != null">
				and ad.wx_name = #{wxName}
			</if>
			<if test="admin.realName != null">
				and ad.real_name = #{realName}
			</if>
		</where>
		order by seq
	</select>

	<insert id="insert" parameterType="com.wyk.sign.model.Classes"
		useGeneratedKeys="true" keyProperty="id">
		insert into tb_classes (
		admin_id,
		`name`,
		status)
		values
		(#{admin.id},
		#{name},
		#{status})
	</insert>

	<update id="update" parameterType="com.wyk.sign.model.Classes">
		update tb_classes set
		admin_id=#{admin.id},
		`name`=#{name},
		status=#{status},
		modify_time=#{modifyTime}
		where id = #{id}
	</update>

	<delete id="delete" parameterType="com.wyk.sign.model.Classes">
		delete from tb_classes
		<where>
			<if test="id != null">
				id = #{id}
			</if>
		</where>
	</delete>
	<!-- End of Base Mapper -->

</mapper>