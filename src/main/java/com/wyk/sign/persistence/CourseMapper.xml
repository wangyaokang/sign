<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyk.sign.persistence.CourseMapper">

	<resultMap type="com.wyk.sign.model.Course" id="courseMap">
		<id property="id" column="id" javaType="long" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="createTime" column="create_time" />
		<result property="modifyTime" column="modify_time" />
	</resultMap>

	<sql id="selectSQL">
		select * from tb_course
	</sql>

	<!-- Base Mapper -->
	<select id="get" parameterType="hashmap" resultMap="courseMap">
		<include refid="selectSQL" />
		<where>
			<if test="id != null">
				id = #{id}
			</if>
		</where>
		limit 0,1
	</select>

	<select id="query" resultMap="courseMap">
		<include refid="selectSQL" />
	</select>

	<select id="queryByMap" parameterType="hashmap" resultMap="courseMap">
		<include refid="selectSQL" />
		<where>
			<if test="name != null">
				  `name` = #{name}
			</if>
		</where>
		order by seq
	</select>

	<insert id="insert" parameterType="com.wyk.sign.model.Course"
		useGeneratedKeys="true" keyProperty="id">
		insert into tb_course (
		`name`,
		status)
		values
		(#{name},
		#{status})
	</insert>

	<update id="update" parameterType="com.wyk.sign.model.Course">
		update tb_course set
		`name`=#{name},
		status=#{status},
		modify_time=#{modifyTime}
		where id = #{id}
	</update>

	<delete id="delete" parameterType="com.wyk.sign.model.Course">
		delete from tb_course
		<where>
			<if test="id != null">
				id = #{id}
			</if>
		</where>
	</delete>
	<!-- End of Base Mapper -->

</mapper>