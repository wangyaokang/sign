<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyk.sign.persistence.SignInfoMapper">

	<resultMap type="com.wyk.sign.model.SignInfo" id="signInfoMap">
		<id property="id" column="id" javaType="long" />
		<result property="startDate" column="start_date" />
		<result property="stopDate" column="stop_date" />
		<result property="address" column="address" />
		<result property="status" column="status" />
		<association property="admin" javaType="com.wyk.sign.model.Administrator">
			<id property="id" column="admin_id"/>
			<result property="wxId" column="admin_wx_id" />
			<result property="wxName" column="admin_wx_name" />
			<result property="wxAvatarUrl" column="admin_wx_avatar_url" />
			<result property="realName" column="admin_real_name" />
			<result property="userType" column="admin_user_type" />
			<result property="status" column="admin_status" />
		</association>
		<association property="class" javaType="com.wyk.sign.model.Classes">
			<id property="id" column="class_id"/>
			<result property="name" column="class_name" />
			<result property="status" column="class_status" />
		</association>
		<association property="course" javaType="com.wyk.sign.model.Course">
			<id property="id" column="course_id"/>
			<result property="name" column="course_name" />
			<result property="status" column="course_status" />
		</association>
	</resultMap>

	<sql id="selectSQL">
		select s.*,
			ad.wx_name as admin_wx_name,
			ad.wx_avatar_url as admin_wx_avatar_url,
			ad.real_name as admin_real_name,
			ad.user_type as admin_user_type,
			cl.name as class_name,
			cl.status as class_status,
			co.name as course_name,
			co.status as course_status
		 from ((tb_sign_info s inner join tb_classes cl on s.class_id = cl.id)
		 		inner join tb_course co on s.course_id = co.id)
		 		inner join tb_admin ad as on s.admin_id = ad.id and ad.user_type = 2
	</sql>

	<!-- Base Mapper -->
	<select id="get" parameterType="hashmap" resultMap="signInfoMap">
		<include refid="selectSQL" />
		<where>
			<if test="id != null">
				s.id = #{id}
			</if>
		</where>
		limit 0,1
	</select>

	<select id="query" resultMap="resultMap">
		<include refid="selectSQL" />
	</select>

	<select id="queryByMap" parameterType="hashmap" resultMap="signInfoMap">
		<include refid="selectSQL" />
		<where>
			<if test="class.name != null">
				class_name = #{class.name}
			</if>
			<if test="course.name != null">
				and course_name = #{course.name}
			</if>
			<if test="admin.wxName != null">
				and admin_wx_name = #{admin.wxName}
			</if>
			<if test="admin.realName != null">
				and real_name = #{admin.realName}
			</if>
		</where>
		order by seq
	</select>

	<insert id="insert" parameterType="com.wyk.sign.model.SignInfo"
		useGeneratedKeys="true" keyProperty="id">
		insert into tb_sign_info (
		admin_id,
		class_id,
		course_id,
		start_date,
		stop_date,
		address,
		status)
		values
		(#{admin.id},
		#{class.id},
		#{course.id},
		#{startDate},
		#{stopDate},
		#{address},
		#{status})
	</insert>

	<update id="update" parameterType="com.wyk.sign.model.SignInfo">
		update tb_sign_info set
		admin_id=#{admin.id},
		class_id=#{class.id},
		course_id=#{course.id},
		start_date=#{startDate},
		stop_date=#{stopDate},
		address=#{address},
		status=#{status},
		modify_time=#{modifyTime}
		where id = #{id}
	</update>

	<delete id="delete" parameterType="com.wyk.sign.model.SignInfo">
		delete from tb_sign_info
		<where>
			<if test="id != null">
				id = #{id}
			</if>
		</where>
	</delete>
	<!-- End of Base Mapper -->

</mapper>