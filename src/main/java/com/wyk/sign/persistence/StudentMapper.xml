<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyk.sign.persistence.StudentMapper">

	<resultMap type="com.wyk.sign.model.Student" id="studentMap">
		<id property="id" column="id" javaType="long" />
		<result property="wxId" column="wx_id" />
		<result property="wxName" column="wx_name" />
		<result property="wxAvatarUrl" column="wx_avatar_url" />
		<result property="realName" column="real_name" />
		<result property="userType" column="user_type" />
		<result property="sno" column="sno" />
		<result property="status" column="status" />
		<result property="createTime" column="create_time" />
		<result property="modifyTime" column="modify_time" />
		<association property="class" javaType="com.wyk.sign.model.Classes">
			<id property="id" column="class_id"/>
			<result property="name" column="class_name"/>
		</association>
	</resultMap>

	<sql id="selectSQL">
		select * from tb_student
	</sql>

	<!-- Base Mapper -->
	<select id="get" parameterType="hashmap" resultMap="studentMap">
		<include refid="selectSQL" />
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="wxId != null">
				and wx_id = #{wxId}
			</if>
		</where>
		limit 0,1
	</select>

	<select id="query" resultMap="resultMap">
		<include refid="selectSQL" />
	</select>

	<select id="queryByMap" parameterType="hashmap" resultMap="studentMap">
		<include refid="selectSQL" />
		<where>
			<if test="wxId != null">
				wx_id = #{wxId}
			</if>
			<if test="wxName != null">
				and wxName = #{wxName}
			</if>
			<if test="realName != null">
				and real_name = #{realName}
			</if>
			<if test="classId != null">
				and class_id = #{classId}
			</if>
		</where>
		order by seq
	</select>

	<insert id="insert" parameterType="com.wyk.sign.model.Student"
		useGeneratedKeys="true" keyProperty="id">
		insert into tb_student (wx_id,
		wx_name,
		wx_avatar_url,
		real_name,
		user_type,
		class_id,
		sno,
		status)
		values
		(#{wxId},
		#{wxName},
		#{wxAvatarUrl},
		#{realName},
		#{userType},
		#{class.id},
		#{sno},
		#{status})
	</insert>

	<update id="update" parameterType="com.wyk.sign.model.Student">
		update tb_student set
		wx_id=#{wxId},
		wx_name=#{wxName},
		wx_avatar_url=#{wxAvatarUrl},
		real_name=#{realName},
		class_id=#{class.id},
		sno=#{sno},
		status=#{status},
		modify_time=#{modifyTime}
		where id = #{id}
	</update>

	<delete id="delete" parameterType="com.wyk.sign.model.Student">
		delete from tb_student
		<where>
			<if test="id != null">
				id = #{id}
			</if>
		</where>
	</delete>
	<!-- End of Base Mapper -->

</mapper>